<% expands('layout/body-admin') %>

<% start('admin-main') %>
<div class="adminActionHead">
  <span class="title" id="mainTitle"><%= titleName %>: Add new record</span>
  <div class="clear"></div>
</div>

<div class="error"></div>

<table class="table table-striped table-bordered">
  <form id="newRecord" <% print('data-model="' + modelName + '"') %>>
	<% for (var i in fields) { %>
	<% var field = fields[i] %>
  <tr>
    <td><%= field %></td>
		<td><% adminField(field, {selects: selects, blueprint: blueprint}) %></td>
  </tr>
	<% } %>
  </form>
</table>

<button class="btn btn-primary" id="saveNew" <% print('data-model="' + modelName + '"') %>>Save new record</button>

<% end('admin-main') %>