<% expands('scenarios/edit') %>

<% start('scenario-edit-object') %>

<div id="scenario-modal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Edit scenario block</h3>
  </div>
  <div id="scenario-modal-body" class="modal-body">
    <% assign('scenario-edit-modal-body') %>
  </div>
  <div class="modal-footer">
    <button id="scenario-block-close" data-dismiss="modal" class="btn">Close</button>
    <button id="scenario-block-save" class="btn btn-primary">Save changes</button>
  </div>
</div>

<% end('scenario-edit-object') %>
