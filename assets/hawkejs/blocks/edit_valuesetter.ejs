<% expands('blocks/edit') -%>

<% start('scenario-edit-modal-body') -%>
<% fieldSelect('scope', {elements: {local: 'Local', global: 'Global'}, null: 'Select variable scope', valueField: false, titleField: false, value: block.settings.scope}) %>

<%
var var_name = '';
var var_value = '';
var var_ttl = '';

	if (typeof block.settings != 'undefined') {
		if (typeof block.settings.var_name != 'undefined') {
			var_name = block.settings.var_name;
		}
		if (typeof block.settings.var_value != 'undefined') {
			var_value = block.settings.var_value;
		}
		if (typeof block.settings.var_ttl != 'undefined') {
			var_ttl = block.settings.var_ttl;
		}
	}
%>

<input type="text" name="varname" placeholder="Variable name" value="<%= var_name %>"/>
<input type="text" name="varvalue" placeholder="Variable value" value="<%= var_value %>"/>
<input type="text" name="varttl" placeholder="Time to live" value="<%= var_ttl %>"/>

<% end('scenario-edit-modal-body') -%>
