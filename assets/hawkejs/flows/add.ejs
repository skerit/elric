<% expands('layout/body-flows') %>

<% set_block('title', 'Flows') %>
<% set_title('Flows') %>
<% set_block('flow-add-hack', '<!-- This is just a hack to fire the event -->') %>

<% start('flow-main') %>

<div id="flowview">

</div>

<div id="flowbuttons">
	<div class="btn-nongroup">
		<input id="flowname" name="flowname" type="text" placeholder="Flow name"><br/>
		<div class="btn-group">
			<button class="btn btn-primary" data-target="addElementType" data-elementType="wall"><i class="icon-plus-sign"></i> Add block</button>
			<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li><a href="#" data-target="addFlowBlock" data-flow-block="entrance">Add flow entrance</a></li>
				<li><a href="#" data-target="addFlowBlock" data-flow-block="conditional">Add conditional</a></li>
				<li><a href="#" data-target="addFlowBlock" data-flow-block="scenario">Add scenario</a></li>
			</ul>
		</div>
		
		<button class="btn btn-success" id="saveflow" ><i class="icon-hdd"></i> Save</button>
	</div>
	<input type="hidden" name="doek_mode" value="0" />
	<div class="clear"></div>
</div>

<div id="flow-modal" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Edit flow block</h3>
  </div>
  <div id="flow-modal-body" class="modal-body">
    
  </div>
  <div class="modal-footer">
    <button id="flow-block-close" data-dismiss="modal" class="btn">Close</button>
    <button id="flow-block-save" class="btn btn-primary">Save changes</button>
  </div>
</div>

<% assign('flow-add-hack') %>
<% end('flow-main') %>
